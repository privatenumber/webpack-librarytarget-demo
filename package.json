{
	"name": "webpack-playground",
	"private": true,
	"description": "Webpack config demos",
	"repository": "privatenumber/webpack-playground",
	"author": "Hiroki Osame <hiroki.osame@gmail.com>",
	"license": "MIT",
	"scripts": {
		"build": "run-s build:*",
		"build:libraryTargets": "webpack --config libraryTargets/webpack.config",
		"build:externals": "webpack --config externals/webpack.config",
		"build:module-output": "webpack --config module-output/webpack.config",
		"build:webpack-chunk-name": "webpack --config webpack-chunk-name/webpack.config",
		"build:dll": "rm -rf dll/dist && webpack --config dll/webpack.vendor.config && webpack --config dll/webpack.app.config"
	},
	"devDependencies": {
		"webpack": "^5.0.0-rc.0",
		"webpack-cli": "^3.3.11"
	},
	"dependencies": {
		"clean-webpack-plugin": "^3.0.0",
		"lodash": "^4.17.15",
		"npm-run-all": "^4.1.5"
	}
}
